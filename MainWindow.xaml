<Window x:Class="_313502IfChallenges.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_313502IfChallenges"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label Content ="Negative, Posotive, or Zero?"/>
        <TextBox x:Name="Box1"/>
        <Button Content="Click For Answer" Click="Button_Click" />
        <Label Content="Is your number even or odd?" />
        <TextBox x:Name="Box2"/>
        <Button Content="Click For Answer" Click="Button_Click_1" />
        <Label Content="Check Whether a Character is Alphabet or Not" />
        <TextBox x:Name="Box3" />
        <Button Content="Click For Answer" Click="Button_Click_2" />
        <Label Content="Check Whether Alphabet Character is a Vowel or a Consonant" />
        <TextBox x:Name="Box4" />
        <Button Content="Click For Answer" Click="Button_Click_3" />
    </StackPanel>
</Window>
